<% if (errors) { %>
<div class="row">
    <div class="col-lg-6">
        <div class="alert alert-danger" role="alert">
            <ul>
                <% errors.forEach((error)=> { %>
                    <%
                        let arrword = error.param.split("_");
                        let strword = '';
                        arrword.forEach((word) => {
                            if(word == 'id') return;
                            strword += word.charAt(0).toUpperCase() + word.slice(1) + " ";
                        })
                    %>
                    <li class="text-white">
                        <b><%= strword %></b>: <%= error.msg %>
                    </li>
                <% }) %>
            </ul>
        </div>
    </div>
</div>
<% } %>


