<% include ./../../elements/notify %>
<%
	const collection   = 'users';
	const linkPrefix   = systemConfig.prefixAdmin + '/' + collection + '/';
	const folderUpload = 'uploads/users/'; 
	%>
<!-- <h1>Xin chào, <=params.a> !</h1> -->
<%if(params.a === 'Admin123'){%>
<div class="row">
	<div class="col-lg-12">
		<div class="panel panel-info">
			<div class="panel-heading">
				Search & Filter
				<a href="<%= linkPrefix%>status/all">
					<span id="icon-reload" class="glyphicon glyphicon-refresh"></span>
				</a>
			</div>
			
			<div class="panel-body">
				<div class="row">
					<div class="status-list col-sm-5 pl0">
						<!-- Filter status -->
						<%include ./../../helpers/filter-status%>
						<%-filterStatusHelpers(linkPrefix,statusFilter, params.keyword)%>
					</div>
					<div class="col-sm-2">
						<%include ./../../helpers/selectbox%>
						<%-selectboxHelper('filter_group',groupsItems, params.groupID)%>
					</div>
					<div class="col-sm-5">
						<form action="<%= linkPrefix%>status/<%=params.currentStatus%>" method="GET">
							<div class="input-group">
								<input type="text" class="form-control" name="keyword" placeholder="Search for..."
								value="<%=params.keyword%>">
								
								<span class="input-group-btn">
									<button class="btn btn-info" type="submit">Search</button>
								</span>
								<span class="input-group-btn">
									<button class="btn btn-success" type="button"><a
										href="<%=linkPrefix%>status/<%=params.currentStatus%>">Clear</a></button>
									</span>
								</div>
							</form>
							
						</div>
					</div>
				</div>
			</div>
		</div>
	<div class="col-lg-12">

		<div class="panel panel-info">
			<div class="panel-heading">
				List Items
			</div>
			<!-- /.panel-heading -->
			<div class="panel-body">
				<form role="form" class="form-inline zt-form" id="zt-form" action="" method="post">
					<%include ./../../helpers/action%>
					<%-actionHelpers(linkPrefix)%>
					<div class="table-responsive">
						<table class="table table-striped">
							<thead>
								<tr>
									<th>
										<input type="checkbox" class="cbAll"/>
									</th>
									<th>#</th>
									<%include ./../../helpers/sort%>
									<%-sortHelpers(linkPrefix, 'Name', 'name', params.sortField, params.sortType, "width:20%")%>
									<th>Username</th>
									<th>Avatar</th>
									<%-sortHelpers(linkPrefix, 'Status', 'status', params.sortField, params.sortType)%>
									<%-sortHelpers(linkPrefix, 'Ordering', 'ordering', params.sortField, params.sortType)%>
									<%-sortHelpers(linkPrefix, 'Group', 'group.name', params.sortField, params.sortType)%>
									<th>Create</th>
									<th>Modified</th>
									<th>Action</th>
								</tr>
							</thead>
							<tbody>
								<%include ./../../helpers/status%>
								<% if(items.length > 0) {%>
									<%items.forEach((item,index)=>{%>
										<tr>
											<td>
												<input type="checkbox" name="cid" value="<%=item.id%>" />
											</td>
											<td>
												<%=index+1%>
											</td>
											<td>
												<%include ./../../helpers/highlight%>
												<%-highLightHelpers(item.name, params.keyword) %>
											</td>
											<td><%=item.username%></td>
											<td>
												<%include ./../../helpers/image%>
												<%-imageHelper(folderUpload, item.avatar, item.name)%>
											</td>
											<td>
												<%-statusHelper(linkPrefix, item.status, item.id)%>
											</td>
											<td>
												<input type="number" value="<%=item.ordering%>" class="text-center ordering">
											</td>
											<td><%= item.group.name%></td>
											<td>
												<%include ./../../helpers/source-by%>
												<%-sourceByHelpers(item.created.user_name, item.created.time)%>
											</td>
											<td>
												<%-sourceByHelpers(item.modified.user_name, item.modified.time)%>
											</td>
											
											<td>
												<a href="<%=linkPrefix%>form/<%=item.id%>" type="button"
													class="btn btn-warning btn-sm">Edit</a>
												<a href="<%=linkPrefix%>delete/<%=item.id%>" type="button"
													class="btn btn-danger btn-sm btn-delete">Delete</a>
											</td>
										</tr>
										<%})%>
									<% } else { %>
										<td><th>Không có dữ liệu</th></td>
									<%}%>	
							</tbody>
						</table>
					</div>
				</form>
			</div>
		</div>
	</div>
	<div class="col-lg-12">
		<%include ./../../helpers/pagination%>
		<%- paginationHelpers(params.pagination, linkPrefix, params.currentStatus, params.keyword)%>	
	</div>
</div>
