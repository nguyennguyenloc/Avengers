<% include ./../../elements/notify %>
<%
	const collection = 'category';
	const linkPrefix = systemConfig.prefixAdmin + '/category/';
%>
<!-- <h1>Xin chào, <params.a> !</h1> -->
<%if(params.a === 'Admin123'){%>
<div class="row">
	<div class="col-lg-12">
		<div class="panel panel-info">
			<div class="panel-heading">
				Tìm kiếm
				<a href="<%= linkPrefix%>status/all">
					<span id="icon-reload" class="glyphicon glyphicon-refresh"></span>
				</a>
			</div>

			<div class="panel-body">
				<div class="row">
					<div class="status-list col-sm-6 pl0">
						<!-- Filter status -->
						<%include ./../../helpers/filter-status%>
						<%-filterStatusHelpers(linkPrefix, statusFilter, params.keyword)%>
					</div>
					<div class="col-sm-6">
						<form action="<%= linkPrefix%>status/<%=params.currentStatus%>" method="GET">
							<div class="input-group">
								<input type="text" class="form-control" name="keyword" placeholder="Search for..."
									value="<%=params.keyword%>">

								<span class="input-group-btn">
									<button class="btn btn-info" type="submit">Tìm kiếm</button>
								</span>
								<span class="input-group-btn">
									<button class="btn btn-success" type="button"><a
											href="<%=linkPrefix%>status/<%=params.currentStatus%>">Xoá tìm kiếm</a></button>
								</span>
							</div>
						</form>

					</div>
				</div>
			</div>
		</div>
	</div>


	<div class="col-lg-12">

		<div class="panel panel-info">
			<div class="panel-heading">
				Danh sách môn học
			</div>
			<!-- /.panel-heading -->
			<div class="panel-body">
				<form role="form" class="form-inline zt-form" id="zt-form" action="" method="post">
					<%include ./../../helpers/action%>
					<%-actionHelpers(linkPrefix)%>
					<div class="table-responsive">
						<table class="table table-striped">
							<thead>
								<tr>
									<th>
										<input type="checkbox" class="cbAll"/>
									</th>
									<th>#</th>
									<%include ./../../helpers/sort%>
									<%-sortHelpers(linkPrefix, 'Môn học', 'name', params.sortField, params.sortType, "width:20%")%>
									<%-sortHelpers(linkPrefix, 'Tình trạng', 'status', params.sortField, params.sortType)%>
									<%-sortHelpers(linkPrefix, 'Số tiết', 'ordering', params.sortField, params.sortType, "width: 10%")%>
									<%-sortHelpers(linkPrefix, 'Slug', 'group_acp', params.sortField, params.sortType, "width: 12%")%>
									<th>Ngày tạo</th>
									<th>Chỉnh sửa</th>
									<th>Hoạt động</th>
								</tr>
							</thead>
							<tbody>
								<%include ./../../helpers/status%>
									<%items.forEach((item,index)=>{%>
										<tr>
											<td>
												<input type="checkbox" name="cid" value="<%=item.id%>" />
											</td>
											<td>
												<%=index+1%>
											</td>
											<td>
												<%include ./../../helpers/highlight%>
												<%-highLightHelpers(item.name, params.keyword) %>
											</td>
											<td>
												<%-statusHelper(linkPrefix, item.status, item.id)%>
											</td>
											<td>
												<input type="number" value="<%=item.ordering%>" class="text-center ordering">
											</td>
											<td>
												<%include ./../../helpers/group-acp%>
												<%=item.slug%>
											</td>
											<td>
												<%include ./../../helpers/source-by%>
												<%-sourceByHelpers(item.created.user_name, item.created.time)%>
											</td>
											<td>
												<%-sourceByHelpers(item.modified.user_name, item.modified.time)%>
											</td>
											<td>
												<a href="<%=linkPrefix%>form/<%=item.id%>" type="button"
													class="btn btn-warning btn-sm">Sửa</a>
												<a href="<%=linkPrefix%>delete/<%=item.id%>" type="button"
													class="btn btn-danger btn-sm btn-delete">Xoá</a>
											</td>
										</tr>
										<%})%>
							</tbody>
						</table>
					</div>
				</form>
			</div>
		</div>
	</div>
	<!-- <h3>
		< JSON.stringify(params.pagination)>
	</h3> -->
	<div class="col-lg-12">
		<%include ./../../helpers/pagination%>
		<%- paginationHelpers(params.pagination, linkPrefix, params.currentStatus, params.keyword)%>	
	</div>
</div>
<%} else {%>
	<h1>Bạn không có quyền truy cập</h1>
</div>
<%}%>