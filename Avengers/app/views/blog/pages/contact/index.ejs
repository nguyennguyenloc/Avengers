<% include ./../../helpers/format-date %>
<% include ./../../helpers/format-summary %>
<% const linkPrefix = systemConfig.prefixBlog + `/contact/`; %>

<section class="contact-section">
	<div class="container">
	<% include ./../../elements/errors %>
	<% include ./../../elements/notify %>
		<div class="row">
			<div class="col-12">
				<h2 class="contact-title">Điền thông tin liên hệ</h2>
			</div>
			<div class="col-lg-8">
				<form class="form-contact contact_form" action="<%= linkPrefix %>save" method="POST" enctype="multipart/form-data" name="form-upload">
					<div class="row">
						<div class="col-12">
							<div class="form-group">
								<label for="avatar">Choose a profile picture:</label>					
								<input class="form-control" type="file" name="content">
							</div>
						</div>
						<div class="col-sm-6">
							<div class="form-group">
								<input class="form-control" name="name" type="text" value="" id="name" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Họ và Tên'" placeholder="Họ và Tên">
							</div>
						</div>
						<div class="col-sm-6">
							<div class="form-group">
								<input class="form-control" name="phone" type="number" value="" id="phone" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Số điện thoại'" placeholder="Số điện thoại">
							</div>
						</div>
						<div class="col-12">
							<div class="form-group">
								<input class="form-control" name="email" type="email" value="" id="email" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Email'" placeholder="Email">
							</div>
						</div>
					</div>
					<div class="form-group mt-3">
							<input class="form-control" name="status" value="inactive" type="hidden" id="status" >
						<button style="background:#EC5252; color:white; font-size: bold;" type="submit" class="button button-contactForm boxed-btn">Gửi</button>
					</div>
				</form>
			</div>
			<div class="col-lg-3 offset-lg-1">
				<div class="media contact-info">
					<div class="media-body">
						<h4><i class="fa fa-home"></i> <%= contact.address %></h4>
						<p><%= contact.address1 %></p>
					</div>
				</div>
				<div class="media contact-info">
					<div class="media-body">
						<h4><i class="fa fa-phone"></i> + <%= contact.hotline %></h4>
						<p><%= contact.time %></p>
					</div>
				</div>
				<div class="media contact-info">
					<div class="media-body">
						<h4><i class="fa fa-envelope"></i> <%= contact.email %></h4>
						<p><%= contact.time %></p>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>